{
	"presets": ["@babel/preset-env", "@babel/preset-typescript"],
	"plugins": [
		"babel-plugin-transform-typescript-metadata",
		["@babel/plugin-proposal-decorators", { "legacy": true }],
		["@babel/plugin-proposal-class-properties"],
		[
			"module-resolver",
			{
				"alias": {
					"@base": "./src/",
					"@modules": "./src/modules",
					"@shared": "./src/shared"
				}
			}
		]
	]
}
